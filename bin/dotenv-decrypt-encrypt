#!/bin/bash

cd "$(dirname "$0")"

if [[ $# -eq 0 ]]; then
    encrypt=0
elif [[ $# -eq 1 ]] && [ "$1" = "decrypt" ]; then
    encrypt=0
elif [[ $# -eq 1 ]] && [ "$1" = "encrypt" ]; then
    encrypt=1
else
    >&2 echo "Usage: $0 [encrypt|decrypt]"
    exit 1
fi

echo -n 'Password: '
read -s password
echo

echo -n 'Retype password: '
read -s confirm_password
echo

if ! [ "$password" = "$confirm_password" ]; then
    echo "Passwords must match";
    exit 1
fi

if [[ "$encrypt" -eq "1" ]]; then
    openssl aes-256-cbc -a -salt -pbkdf2 \
        -in ../.env \
        -out ../.env.enc \
        -pass "pass:$password"

    openssl aes-256-cbc -a -salt -pbkdf2 \
        -in ../.firebase-service-account.json \
        -out ../.firebase-service-account.json.enc \
        -pass "pass:$password"
    
else
    openssl aes-256-cbc -d -a -salt -pbkdf2 \
        -in ../.env.enc \
        -out ../.env \
        -pass "pass:$password"

    openssl aes-256-cbc -d -a -salt -pbkdf2 \
        -in ../.firebase-service-account.json.enc \
        -out ../.firebase-service-account.json \
        -pass "pass:$password"
fi
